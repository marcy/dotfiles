altscreen on
defencoding utf8
cjkwidth on
defscrollback 4000
termcapinfo xterm* ti@:te@

escape ^Tt
vbell off
bind w windowlist -b
hardstatus alwayslastline %w
# caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d(%D) %{=b wb}%c"
startup_message off
autodetach on

# Emacs キーバインドっぽく
bind 2 split
bind o focus
bind 1 only
bind 0 remove
